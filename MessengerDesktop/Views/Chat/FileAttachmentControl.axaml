<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:MessengerDesktop.Controls"
             xmlns:shared="using:MessengerDesktop.Controls.Shared"
             xmlns:vmChat="using:MessengerDesktop.ViewModels.Chat"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             x:Class="MessengerDesktop.Views.Chat.FileAttachmentControl"
             x:DataType="vmChat:MessageFileViewModel">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ImageOverlayBrush" Color="#66000000"/>
        <SolidColorBrush x:Key="ImageOverlayButtonBrush" Color="#88000000"/>
        <SolidColorBrush x:Key="ErrorOverlayBrush" Color="#33FF4444"/>
        <SolidColorBrush x:Key="ErrorTextBrush" Color="#FF6666"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Border.FileAttachment">
            <Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="MinWidth" Value="240"/>
            <Setter Property="MaxWidth" Value="320"/>
        </Style>

        <Style Selector="Border.FileIcon">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="{DynamicResource Accent}"/>
        </Style>

        <Style Selector="Border.ImageAttachment">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="MaxWidth" Value="320"/>
            <Setter Property="MaxHeight" Value="320"/>
        </Style>

        <!-- Кнопки оверлея изображения -->
        <Style Selector="Button.ImageOverlayButton">
            <Setter Property="Background" Value="{StaticResource ImageOverlayButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.ImageOverlayButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ImageOverlayBrush}"/>
        </Style>

        <!-- Placeholder пока изображение загружается -->
        <Style Selector="Border.ImagePlaceholder">
            <Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="MinHeight" Value="120"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- ===== ИЗОБРАЖЕНИЕ ===== -->
        <Border Classes="ImageAttachment"
                HorizontalAlignment="Left"
                IsVisible="{Binding IsImage}"
                x:Name="ImageContainer"
                AutomationProperties.Name="{Binding FileName}"
                AutomationProperties.HelpText="Вложенное изображение">
            <Grid>
                <!-- Placeholder -->
                <Border Classes="ImagePlaceholder">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="8">
                        <Path Data="{StaticResource ImageIcon}"
                              Fill="{DynamicResource TextMuted}"
                              Width="32" Height="32"
                              Stretch="Uniform"
                              Opacity="0.3"
                              HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding FileSizeFormatted}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextMuted}"
                                   HorizontalAlignment="Center"
                                   IsVisible="{Binding FileSizeFormatted, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    </StackPanel>
                </Border>

                <!-- Само изображение -->
                <Image Stretch="Uniform"
                       asyncImageLoader:ImageLoader.Source="{Binding Url}"/>

                <!-- Overlay при наведении -->
                <Border Background="{StaticResource ImageOverlayBrush}"
                        CornerRadius="10"
                        IsVisible="{Binding #ImageContainer.IsPointerOver}">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="8">
                        <Button Classes="ImageOverlayButton"
                                Command="{Binding DownloadCommand}"
                                IsVisible="{Binding !IsDownloaded}"
                                ToolTip.Tip="Скачать"
                                AutomationProperties.Name="Скачать изображение">
                            <Path Data="{StaticResource DownloadIcon}"
                                  Fill="White"
                                  Width="18" Height="18"
                                  Stretch="Uniform"/>
                        </Button>

                        <Button Classes="ImageOverlayButton"
                                Command="{Binding OpenFileCommand}"
                                IsVisible="{Binding IsDownloaded}"
                                ToolTip.Tip="Открыть"
                                AutomationProperties.Name="Открыть изображение">
                            <Path Data="{StaticResource OpenIcon}"
                                  Fill="White"
                                  Width="18" Height="18"
                                  Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ===== ФАЙЛ (не изображение) ===== -->
        <Border Classes="FileAttachment"
                HorizontalAlignment="Left"
                IsVisible="{Binding !IsImage}"
                AutomationProperties.Name="{Binding FileName}"
                AutomationProperties.HelpText="Вложенный файл">
            <Grid RowDefinitions="Auto,Auto">
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                    <!-- Иконка файла -->
                    <Border Grid.Column="0" Classes="FileIcon">
                        <TextBlock Text="{Binding FileIcon}"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Информация о файле -->
                    <StackPanel Grid.Column="1"
                                Margin="12,0,8,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding FileName}"
                                   FontWeight="Medium"
                                   FontSize="13"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="160"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{Binding FileSizeFormatted}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondary}"
                                       IsVisible="{Binding FileSizeFormatted, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            <TextBlock Text="{Binding ContentType}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <!-- Скачать / Скачано -->
                        <Button Classes="IconButton Subtle"
                                Command="{Binding DownloadCommand}"
                                IsVisible="{Binding !IsDownloading}"
                                ToolTip.Tip="Скачать"
                                AutomationProperties.Name="Скачать файл"
                                Width="36" Height="36">
                            <Panel>
                                <Path Data="{StaticResource DownloadIcon}"
                                      Fill="{DynamicResource TextSecondary}"
                                      Width="16" Height="16"
                                      Stretch="Uniform"
                                      IsVisible="{Binding !IsDownloaded}"/>
                                <Path Data="{StaticResource CheckIcon}"
                                      Fill="{DynamicResource SuccessBrush}"
                                      Width="16" Height="16"
                                      Stretch="Uniform"
                                      IsVisible="{Binding IsDownloaded}"/>
                            </Panel>
                        </Button>

                        <!-- Прогресс загрузки -->
                        <Grid Width="36" Height="36"
                              IsVisible="{Binding IsDownloading}">
                            <shared:CircularProgress Value="{Binding DownloadProgress}"
                                                        Maximum="100"
                                                        StrokeWidth="3"
                                                        Size="28"
                                                        Foreground="{DynamicResource Accent}"/>
                            <Button Classes="IconButton"
                                    Command="{Binding CancelDownloadCommand}"
                                    ToolTip.Tip="Отменить"
                                    AutomationProperties.Name="Отменить загрузку"
                                    Width="20" Height="20"
                                    CornerRadius="10">
                                <TextBlock Text="✕"
                                           FontSize="10"
                                           Foreground="{DynamicResource TextSecondary}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Button>
                        </Grid>

                        <!-- Открыть файл -->
                        <Button Classes="IconButton Subtle"
                                Command="{Binding OpenFileCommand}"
                                IsVisible="{Binding IsDownloaded}"
                                ToolTip.Tip="Открыть файл"
                                AutomationProperties.Name="Открыть файл"
                                Width="36" Height="36"
                                Margin="4,0,0,0">
                            <Path Data="{StaticResource OpenIcon}"
                                  Fill="{DynamicResource Accent}"
                                  Width="16" Height="16"
                                  Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Прогресс-бар -->
                <ProgressBar Grid.Row="1"
                             Value="{Binding DownloadProgress}"
                             Maximum="100"
                             Height="3"
                             Margin="0,8,0,0"
                             CornerRadius="2"
                             IsVisible="{Binding IsDownloading}"
                             Foreground="{DynamicResource Accent}"
                             Background="{DynamicResource PrimaryBG}"/>

                <!-- Ошибка загрузки -->
                <Border Grid.Row="1"
                        Background="{StaticResource ErrorOverlayBrush}"
                        CornerRadius="6"
                        Padding="8,4"
                        Margin="0,8,0,0"
                        IsVisible="{Binding HasError}">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="{Binding ErrorMessage}"
                                   Foreground="{StaticResource ErrorTextBrush}"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Classes="TextButton"
                                Content="↻"
                                Command="{Binding RetryDownloadCommand}"
                                ToolTip.Tip="Повторить"
                                AutomationProperties.Name="Повторить загрузку"
                                FontSize="14"
                                Margin="8,0,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>