									  HorizontalAlignment="Center"/>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="RadioButton.ThemeCard:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="RadioButton.ThemeCard:checked">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
		<Setter Property="Background" Value="{DynamicResource AccentMuted}"/>
	</Style>

	<Style Selector="RadioButton.ThemeCard:pressed">
		<Setter Property="Background" Value="{DynamicResource AccentPressed}"/>
	</Style>

	<Style Selector="Border.ThemePreview">
		<Setter Property="Height" Value="80"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="ClipToBounds" Value="True"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
	</Style>

	<Style Selector="Border.ThemePreview.Light">
		<Setter Property="Background" Value="#F5F5F5"/>
	</Style>

	<Style Selector="Border.ThemePreview.Dark">
		<Setter Property="Background" Value="#252525"/>
	</Style>

	<Style Selector="Border.ThemePreview.System">
		<Setter Property="Background" Value="Transparent"/>
	</Style>

	<Style Selector="RadioButton.ThemeCard:checked Border.ThemePreview">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	КНОПКА ПРОКРУТКИ ВНИЗ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Button.ScrollToBottomButton">
		<Setter Property="Width" Value="44"/>
		<Setter Property="Height" Value="44"/>
		<Setter Property="CornerRadius" Value="22"/>
		<Setter Property="Background" Value="{DynamicResource PrimaryBG}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Opacity" Value="0"/>
		<Setter Property="RenderTransform" Value="translateY(10px)"/>
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut"/>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Button.ScrollToBottomButton[IsVisible=True]">
		<Setter Property="Opacity" Value="1"/>
		<Setter Property="RenderTransform" Value="translateY(0)"/>
	</Style>

	<Style Selector="Button.ScrollToBottomButton:pointerover">
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
	</Style>

	<Style Selector="Button.ScrollToBottomButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="Transparent"/>
	</Style>

	<Style Selector="Button.ScrollToBottomButton:pressed">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="RenderTransform" Value="scale(0.95)"/>
	</Style>

	<Style Selector="Button.ScrollToBottomButton:pressed Path">
		<Setter Property="Fill" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<Style Selector="Button.ScrollToBottomButton.HasNew">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
		<Setter Property="BorderThickness" Value="2"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	КОНТЕКСТНОЕ МЕНЮ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="MenuFlyoutPresenter">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Padding" Value="4"/>
	</Style>

	<Style Selector="MenuItem">
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="Padding" Value="8,6"/>
		<Setter Property="CornerRadius" Value="4"/>
	</Style>

	<Style Selector="MenuItem:pointerover /template/ Border#PART_LayoutRoot">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="MenuItem:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<Style Selector="MenuFlyoutPresenter Separator">
		<Setter Property="Background" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Height" Value="1"/>
		<Setter Property="Margin" Value="8,4"/>
