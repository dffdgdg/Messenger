<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:MessengerDesktop.Views">

	<!-- ==================== БАЗОВЫЕ ==================== -->

	<Style Selector="Border.PageContainer">
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="ClipToBounds" Value="True"/>
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
	</Style>
	<Style Selector="ToggleSwitch">
		<Setter Property="OnContent" Value="Вкл"/>
		<Setter Property="OffContent" Value="Выкл"/>
	</Style>

	<Style Selector="UserControl">
		<Setter Property="Design.Height" Value="400"/>
		<Setter Property="Design.Width" Value="800"/>
	</Style>

	<Style Selector="Button">
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
	</Style>

	<Style Selector="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector=":is(Button):pressed">
		<Setter Property="RenderTransform" Value="none"/>
	</Style>

	<!-- ==================== TEXTBOX БЕЗ РАМОК ==================== -->
	<!-- Используется в: ChatsView, MainMenuView, ChatView, и др. -->

	<Style Selector="TextBox.Borderless /template/ Border,
                     TextBox.Borderless:focus-within /template/ Border,
                     TextBox.Borderless:pointerover /template/ Border,
                     TextBox:focus-within /template/ Border,
                     TextBox:pointerover /template/ Border">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
	</Style>


	<Style Selector="TextBox.Borderlesses /template/ Border">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="BoxShadow" Value="none"/>
	</Style>

	<!-- Для состояний -->
	<Style Selector="TextBox.Borderlesses:focus /template/ Border">
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="BoxShadow" Value="none"/>
	</Style>

	<Style Selector="TextBox.Borderlesses:pointerover /template/ Border">
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<!-- ==================== ЗАГОЛОВКИ ==================== -->

	<Style Selector="TextBlock.PageTitle">
		<Setter Property="FontSize" Value="28"/>
		<Setter Property="FontWeight" Value="DemiBold"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector="TextBlock.SectionHeader">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
		<Setter Property="Opacity" Value="0.7"/>
	</Style>

	<Style Selector="TextBlock.SectionHeader.Large">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Opacity" Value="1"/>
		<Setter Property="Margin" Value="0,8,0,12"/>
	</Style>

	<Style Selector="TextBlock.PanelTitle">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
	</Style>

	<Style Selector="TextBlock.CategoryHeader">
		<Setter Property="FontSize" Value="11"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
		<Setter Property="Margin" Value="12,8,12,4"/>
	</Style>

	<!-- ==================== АВАТАРЫ ==================== -->

	<Style Selector="Border.Avatar">
		<Setter Property="ClipToBounds" Value="True"/>
		<Setter Property="Background" Value="{DynamicResource AvatarPlaceholderBG}"/>
	</Style>

	<Style Selector="Border.Avatar.Small">
		<Setter Property="Width" Value="36"/>
		<Setter Property="Height" Value="36"/>
		<Setter Property="CornerRadius" Value="18"/>
	</Style>

	<Style Selector="Border.Avatar.Medium">
		<Setter Property="Width" Value="44"/>
		<Setter Property="Height" Value="44"/>
		<Setter Property="CornerRadius" Value="22"/>
	</Style>

	<Style Selector="Border.Avatar.Large">
		<Setter Property="Width" Value="64"/>
		<Setter Property="Height" Value="64"/>
		<Setter Property="CornerRadius" Value="32"/>
	</Style>

	<Style Selector="Border.Avatar.XLarge">
		<Setter Property="Width" Value="100"/>
		<Setter Property="Height" Value="100"/>
		<Setter Property="CornerRadius" Value="50"/>
	</Style>

	<!-- ==================== КНОПКИ ==================== -->

	<Style Selector="Button.IconButton">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="ToggleButton.IconButton">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.IconButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="Button.IconButton:pointerover">
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<Style Selector="Button.IconButton:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<Style Selector="Button.IconButton.Small">
		<Setter Property="Width" Value="32"/>
		<Setter Property="Height" Value="32"/>
	</Style>

	<Style Selector="Button.IconButton.Subtle">
		<Setter Property="Background" Value="{DynamicResource CardBgBrush}"/>
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<Style Selector="Button.IconButton.Danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource DangerHoverBrush}"/>
	</Style>

	<Style Selector="Button.IconButton.Danger:pointerover PathIcon">
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<!-- ToggleButton IconButton -->

	<Style Selector="ToggleButton.IconButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:checked /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:checked">
		<Setter Property="Foreground" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:checked Path">
		<Setter Property="Fill" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<!-- Primary Button -->
	<Style Selector="Button.Primary">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
		<Setter Property="Padding" Value="16,10"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Button.Primary:pointerover">
		<Setter Property="Background" Value="{DynamicResource AccentHover}"/>
	</Style>

	<Style Selector="Button.Primary:pressed">
		<Setter Property="Background" Value="{DynamicResource AccentPressed}"/>
		<Setter Property="RenderTransform" Value="scale(0.98)"/>
	</Style>

	<Style Selector="Button.Primary:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<Style Selector="Button.Primary.FullWidth">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="Height" Value="46"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>

	<!-- Dialog Buttons -->
	<Style Selector="Button.DialogOutline">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Foreground" Value="{DynamicResource Accent}"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.DialogAccent">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.DialogDanger">
		<Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.TextButton">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Foreground" Value="{DynamicResource Accent}"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.EmojiButton">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="4"/>
		<Setter Property="MinWidth" Value="36"/>
		<Setter Property="MinHeight" Value="36"/>
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="CornerRadius" Value="6"/>
	</Style>

	<Style Selector="Button.EmojiButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="Button.ClearButton">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="6"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="CornerRadius" Value="4"/>
	</Style>

	<Style Selector="Button.ClearButton:pointerover">
		<Setter Property="Background" Value="{DynamicResource BorderHover}"/>
	</Style>

	<!-- ==================== НАВИГАЦИЯ ==================== -->

	<Style Selector="RadioButton.NavButton">
		<Setter Property="GroupName" Value="MainNavigation"/>
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource Icon}"/>
		<Setter Property="Width" Value="64"/>
		<Setter Property="Height" Value="58"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
				<BrushTransition Property="Foreground" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate TargetType="RadioButton">
				<Border Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="8">
					<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
						<Path Data="{TemplateBinding Tag}"
                              Width="22" Height="22"
                              Stretch="Uniform"
                              Fill="{TemplateBinding Foreground}"
                              HorizontalAlignment="Center"/>
						<TextBlock Text="{TemplateBinding Content}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0"
                                   Opacity="0.85"/>
					</StackPanel>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="RadioButton.NavButton:pointerover">
		<Setter Property="Background" Value="{DynamicResource BorderHover}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector="RadioButton.NavButton:checked">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<Style Selector="RadioButton.NavButton:pressed">
		<Setter Property="Background" Value="{DynamicResource AccentPressed}"/>
	</Style>

	<Style Selector="RadioButton.NavButton:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<!-- ==================== ПОЛЯ ВВОДА ==================== -->

	<Style Selector="TextBox.DialogInput">
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
		<Setter Property="Padding" Value="12,0"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="TextBox.DialogInput:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
	</Style>

	<Style Selector="TextBox.DialogInput:focus">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="TextBox.Search">
		<Setter Property="Background" Value="{DynamicResource ItemBgBrush}"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Padding" Value="8,0"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
		<Setter Property="CaretBrush" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector="TextBox.Search:focus">
		<Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
	</Style>

	<Style Selector="TextBox.Search:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
	</Style>

	<Style Selector="ComboBox.DialogCombo">
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<!-- ==================== ПОИСК ==================== -->

	<Style Selector="Border.SearchContainer">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.SearchContainer:focus-within">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="Border.SearchResults">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="CornerRadius" Value="0,0,8,8"/>
		<Setter Property="BorderThickness" Value="1,0,1,1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Padding" Value="4"/>
	</Style>

	<!-- ==================== СЕКЦИИ ==================== -->

	<Style Selector="Border.SettingsSection">
		<Setter Property="CornerRadius" Value="12"/>
		<Setter Property="Padding" Value="20"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.SettingsSection:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
	</Style>

	<Style Selector="Border.ProfileSection">
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="Padding" Value="24"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.ProfileSection:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
	</Style>

	<!-- ==================== ДИАЛОГИ ==================== -->

	<Style Selector="Border.DialogContainer">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="Padding" Value="24"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="BoxShadow" Value="0 8 32 #50000000"/>
	</Style>

	<!-- ==================== АЛЕРТЫ ==================== -->

	<Style Selector="Border.AlertError, Border.MessageError">
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Padding" Value="14,12"/>
		<Setter Property="Background" Value="{DynamicResource DangerBgBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource DangerBorderBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="Border.AlertSuccess, Border.MessageSuccess">
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Padding" Value="14,12"/>
		<Setter Property="Background" Value="{DynamicResource SuccessBgBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource SuccessBorderBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<!-- ==================== СООБЩЕНИЯ ==================== -->

	<Style Selector="Border.MessageBubble">
		<Setter Property="Padding" Value="14,10"/>
		<Setter Property="MinWidth" Value="48"/>
		<Setter Property="BoxShadow" Value="0 1 4 0 #12000000"/>
	</Style>

	<Style Selector="Border.MessageBubble.Own">
		<Setter Property="Background" Value="{DynamicResource MessageOwnBackground}"/>
		<Setter Property="CornerRadius" Value="16,4,16,16"/>
	</Style>

	<Style Selector="Border.MessageBubble.Other">
		<Setter Property="Background" Value="{DynamicResource PrimaryBG}"/>
		<Setter Property="CornerRadius" Value="4,16,16,16"/>
	</Style>

	<Style Selector="Border.MessageHighlight">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.3"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.MessageHighlight.Highlighted">
		<Setter Property="Background" Value="#44FFD700"/>
	</Style>

	<!-- ==================== СПИСКИ ==================== -->

	<Style Selector="ListBox.NavMenu">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="0"/>
	</Style>

	<Style Selector="ListBox.NavMenu ListBoxItem">
		<Setter Property="Padding" Value="12,10"/>
		<Setter Property="Margin" Value="0,2"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
				<BrushTransition Property="Foreground" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="ListBox.NavMenu ListBoxItem:pointerover">
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
	</Style>

	<Style Selector="ListBox.NavMenu ListBoxItem:selected">
		<Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<Style Selector="ListBox.NavMenu ListBoxItem:selected PathIcon">
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<Style Selector="Button.ChatListItem">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="8"/>
		<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="CornerRadius" Value="8"/>
	</Style>

	<Style Selector="Button.ChatListItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource BorderHover}"/>
	</Style>

	<Style Selector="Button.ChatListItem:pressed /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="ItemsControl.ChatList">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
	</Style>

	<Style Selector="ItemsControl.ChatList > ContentPresenter">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
	</Style>

	<Style Selector="ListBoxItem.ChatItem">
		<Setter Property="Background" Value="{DynamicResource PrimaryBG}"/>
		<Setter Property="CornerRadius" Value="6"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Margin" Value="0,2"/>
	</Style>

	<Style Selector="ListBoxItem.ChatItem:pointerover">
		<Setter Property="Background" Value="{DynamicResource BorderHover}"/>
	</Style>

	<Style Selector="ListBoxItem.ChatItem:selected">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
	</Style>

	<!-- ==================== HOVER EFFECTS ==================== -->

	<Style Selector="Border.Hoverable">
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.Hoverable:pointerover">
		<Setter Property="Background" Value="{DynamicResource CardHoverBrush}"/>
	</Style>

	<!-- Скрытые действия при наведении -->
	<Style Selector="Border.HoverActions StackPanel.Actions">
		<Setter Property="Opacity" Value="0"/>
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.HoverActions:pointerover StackPanel.Actions">
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<!-- ==================== BADGES ==================== -->

	<Style Selector="Border.UnreadBadge">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="MinWidth" Value="20"/>
		<Setter Property="Height" Value="20"/>
		<Setter Property="Padding" Value="6,0"/>
	</Style>

	<!-- ==================== PANELS ==================== -->

	<Style Selector="Border.PanelHeader">
		<Setter Property="Padding" Value="16,12"/>
		<Setter Property="Background" Value="{DynamicResource PrimaryBG}"/>
	</Style>

	<Style Selector="views|ChatInfoPanel">
		<Setter Property="Width" Value="320"/>
		<Setter Property="ClipToBounds" Value="True"/>
		<Setter Property="Margin" Value="-320,0,0,0"/>
		<Setter Property="Transitions">
			<Transitions>
				<ThicknessTransition Property="Margin" Duration="0:0:0.2" Easing="CubicEaseOut"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="views|ChatInfoPanel[IsVisible=true]">
		<Setter Property="Margin" Value="0"/>
	</Style>
	<!-- ==================== RadioButton IconButton ==================== -->
	<Style Selector="RadioButton.IconButton">
		<Setter Property="GroupName" Value="MainNavigation"/>
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource Icon}"/>
		<Setter Property="Width" Value="64"/>
		<Setter Property="Height" Value="58"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
