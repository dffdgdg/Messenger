<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MessengerDesktop.ViewModels"
             mc:Ignorable="d"
             x:Class="MessengerDesktop.Views.SettingsView"
             x:DataType="vm:SettingsViewModel" Background="{DynamicResource PrimaryBG}">
	<Border CornerRadius="16"
            Background="{DynamicResource SecondaryBG}"
            BorderBrush="{DynamicResource BorderDefault}"
            BorderThickness="1"
            Padding="32">
		<Grid Margin="32,24">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- Заголовок -->
			<TextBlock Text="Настройки"
                       FontSize="28"
                       FontWeight="DemiBold"
                       Foreground="{DynamicResource TextPrimary}"
                       Margin="0,0,0,24"/>

			<!-- Основные секции -->
			<StackPanel Grid.Row="1" Spacing="20">

				<!-- Внешний вид -->
				<Border CornerRadius="12"
                        Padding="20"
                        BorderBrush="{DynamicResource BorderDefault}"
                        BorderThickness="1"
						Background="{DynamicResource ThirdBG}">
					<StackPanel Spacing="14">
						<TextBlock Text="Внешний вид"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>

						<StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Spacing="12">
							<TextBlock Text="Тема:"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Width="120"/>
							<ComboBox Width="200"
                                      ItemsSource="{Binding AvailableThemes}"
                                      SelectedItem="{Binding SelectedTheme}"
                                      Background="{DynamicResource SecondaryBG}"
                                      BorderBrush="{DynamicResource BorderDefault}"
                                      Foreground="{DynamicResource TextPrimary}"
                                      CornerRadius="6"/>
						</StackPanel>
					</StackPanel>
				</Border>

				<!-- Поведение -->
				<Border CornerRadius="12"
                        Padding="20"
                        BorderBrush="{DynamicResource BorderDefault}"
                        BorderThickness="1"
						Background="{DynamicResource ThirdBG}">
					

					<StackPanel Spacing="10">
						<TextBlock Text="Поведение"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>

						<CheckBox Content="Включить уведомления"
                                  IsChecked="{Binding NotificationsEnabled}"
                                  Foreground="{DynamicResource TextPrimary}"/>

						<CheckBox Content="Разрешить поиск профиля"
                                  IsChecked="{Binding CanBeFoundInSearch}"
                                  Foreground="{DynamicResource TextPrimary}"/>
					</StackPanel>
				</Border>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
