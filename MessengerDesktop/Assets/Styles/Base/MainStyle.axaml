<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:views="using:MessengerDesktop.Views">

	<!-- ══════════════════════════════════════════════════════════════
	БАЗОВЫЕ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.PageContainer">
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="ClipToBounds" Value="True"/>
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
	</Style>

	<Style Selector="ToggleSwitch">
		<Setter Property="OnContent" Value="Вкл"/>
		<Setter Property="OffContent" Value="Выкл"/>
	</Style>

	<Style Selector="UserControl">
		<Setter Property="Design.Height" Value="400"/>
		<Setter Property="Design.Width" Value="800"/>
	</Style>

	<Style Selector="Button">
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
	</Style>

	<Style Selector="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector=":is(Button):pressed">
		<Setter Property="RenderTransform" Value="none"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	TEXTBOX БЕЗ РАМОК
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="TextBox.Borderless /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="BoxShadow" Value="none"/>
	</Style>

	<Style Selector="TextBox.Borderless:focus-within /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="BoxShadow" Value="none"/>
	</Style>

	<Style Selector="TextBox.Borderless:pointerover /template/ Border#PART_BorderElement">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	ЗАГОЛОВКИ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="TextBlock.PageTitle">
		<Setter Property="FontSize" Value="28"/>
		<Setter Property="FontWeight" Value="DemiBold"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector="TextBlock.SectionHeader">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
		<Setter Property="Opacity" Value="0.7"/>
	</Style>

	<Style Selector="TextBlock.SectionHeader.Large">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Opacity" Value="1"/>
		<Setter Property="Margin" Value="0,8,0,12"/>
	</Style>

	<Style Selector="TextBlock.PanelTitle">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
	</Style>

	<Style Selector="TextBlock.CategoryHeader">
		<Setter Property="FontSize" Value="11"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
		<Setter Property="Margin" Value="12,8,12,4"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	АВАТАРЫ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.Avatar">
		<Setter Property="ClipToBounds" Value="True"/>
		<Setter Property="Background" Value="{DynamicResource AvatarPlaceholderBG}"/>
	</Style>

	<Style Selector="Border.Avatar.Small">
		<Setter Property="Width" Value="36"/>
		<Setter Property="Height" Value="36"/>
		<Setter Property="CornerRadius" Value="18"/>
	</Style>

	<Style Selector="Border.Avatar.Medium">
		<Setter Property="Width" Value="44"/>
		<Setter Property="Height" Value="44"/>
		<Setter Property="CornerRadius" Value="22"/>
	</Style>

	<Style Selector="Border.Avatar.Large">
		<Setter Property="Width" Value="64"/>
		<Setter Property="Height" Value="64"/>
		<Setter Property="CornerRadius" Value="32"/>
	</Style>

	<Style Selector="Border.Avatar.XLarge">
		<Setter Property="Width" Value="100"/>
		<Setter Property="Height" Value="100"/>
		<Setter Property="CornerRadius" Value="50"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	КНОПКИ — ICON BUTTON
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Button.IconButton">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="ToggleButton.IconButton">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="0"/>
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.IconButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="Button.IconButton:pointerover">
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<Style Selector="Button.IconButton:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<Style Selector="Button.IconButton.Small">
		<Setter Property="Width" Value="32"/>
		<Setter Property="Height" Value="32"/>
	</Style>

	<Style Selector="Button.IconButton.Subtle">
		<Setter Property="Background" Value="{DynamicResource CardBgBrush}"/>
		<Setter Property="Opacity" Value="1"/>
	</Style>

	<Style Selector="Button.IconButton.Danger:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource DangerHoverBrush}"/>
	</Style>

	<Style Selector="Button.IconButton.Danger:pointerover PathIcon">
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<!-- ToggleButton.IconButton -->

	<Style Selector="ToggleButton.IconButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:checked /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:checked">
		<Setter Property="Foreground" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:checked Path">
		<Setter Property="Fill" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="ToggleButton.IconButton:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	КНОПКИ — PRIMARY
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Button.Primary">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
		<Setter Property="Padding" Value="16,10"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
				<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Button.Primary:pointerover">
		<Setter Property="Background" Value="{DynamicResource AccentHover}"/>
	</Style>

	<Style Selector="Button.Primary:pressed">
		<Setter Property="Background" Value="{DynamicResource AccentPressed}"/>
		<Setter Property="RenderTransform" Value="scale(0.98)"/>
	</Style>

	<Style Selector="Button.Primary:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<Style Selector="Button.Primary.FullWidth">
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="Height" Value="46"/>
		<Setter Property="FontSize" Value="15"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	КНОПКИ — DIALOG / TEXT / EMOJI / CLEAR
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Button.DialogOutline">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Foreground" Value="{DynamicResource Accent}"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.DialogAccent">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.DialogDanger">
		<Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.TextButton">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Foreground" Value="{DynamicResource Accent}"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="Cursor" Value="Hand"/>
	</Style>

	<Style Selector="Button.EmojiButton">
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="4"/>
		<Setter Property="MinWidth" Value="36"/>
		<Setter Property="MinHeight" Value="36"/>
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="CornerRadius" Value="6"/>
	</Style>

	<Style Selector="Button.EmojiButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource HoverOverlay}"/>
	</Style>

	<Style Selector="Button.ClearButton">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Padding" Value="6"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="CornerRadius" Value="4"/>
	</Style>

	<Style Selector="Button.ClearButton:pointerover">
		<Setter Property="Background" Value="{DynamicResource BorderHover}"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	НАВИГАЦИЯ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="RadioButton.NavButton, RadioButton.IconButton">
		<Setter Property="GroupName" Value="MainNavigation"/>
		<Setter Property="Background" Value="{DynamicResource TransparentBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource Icon}"/>
		<Setter Property="Width" Value="64"/>
		<Setter Property="Height" Value="58"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
				<BrushTransition Property="Foreground" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
		<Setter Property="Template">
			<ControlTemplate TargetType="RadioButton">
				<Border Background="{TemplateBinding Background}"
						CornerRadius="{TemplateBinding CornerRadius}"
						Padding="8">
					<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
						<Path Data="{TemplateBinding Tag}"
							  Width="22" Height="22"
							  Stretch="Uniform"
							  Fill="{TemplateBinding Foreground}"
							  HorizontalAlignment="Center"/>
						<TextBlock Text="{TemplateBinding Content}"
								   FontSize="11"
								   FontWeight="SemiBold"
								   Foreground="{TemplateBinding Foreground}"
								   HorizontalAlignment="Center"
								   Margin="0,6,0,0"
								   Opacity="0.85"/>
					</StackPanel>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="RadioButton.NavButton:pointerover, RadioButton.IconButton:pointerover">
		<Setter Property="Background" Value="{DynamicResource BorderHover}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector="RadioButton.NavButton:checked, RadioButton.IconButton:checked">
		<Setter Property="Background" Value="{DynamicResource Accent}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextOnAccent}"/>
	</Style>

	<Style Selector="RadioButton.NavButton:pressed, RadioButton.IconButton:pressed">
		<Setter Property="Background" Value="{DynamicResource AccentPressed}"/>
	</Style>

	<Style Selector="RadioButton.NavButton:disabled, RadioButton.IconButton:disabled">
		<Setter Property="Opacity" Value="0.5"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	ПОЛЯ ВВОДА
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="TextBox.DialogInput">
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
		<Setter Property="Padding" Value="12,0"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="TextBox.DialogInput:pointerover /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="TextBox.DialogInput:focus-within /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="TextBox.Search">
		<Setter Property="Background" Value="{DynamicResource ItemBgBrush}"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Padding" Value="8,0"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
		<Setter Property="CaretBrush" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<Style Selector="TextBox.Search:pointerover /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
		<Setter Property="Background" Value="{DynamicResource ItemBgBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="TextBox.Search:focus-within /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
		<Setter Property="Background" Value="{DynamicResource ItemBgBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="TextBox.LoginInput">
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="Height" Value="44"/>
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
		<Setter Property="Padding" Value="14,0"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
				<BrushTransition Property="Background" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="TextBox.LoginInput:pointerover /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="TextBox.LoginInput:focus-within /template/ Border#PART_BorderElement">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="ComboBox.DialogCombo">
		<Setter Property="Background" Value="{DynamicResource ControlBg}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	ПОИСК
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.SearchContainer">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.SearchContainer:focus-within">
		<Setter Property="BorderBrush" Value="{DynamicResource Accent}"/>
	</Style>

	<Style Selector="Border.SearchResults">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="CornerRadius" Value="0,0,8,8"/>
		<Setter Property="BorderThickness" Value="1,0,1,1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Padding" Value="4"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	СЕКЦИИ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.SettingsSection">
		<Setter Property="CornerRadius" Value="12"/>
		<Setter Property="Padding" Value="20"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.SettingsSection:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
	</Style>

	<Style Selector="Border.ProfileSection">
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="Padding" Value="24"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.ProfileSection:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource BorderHover}"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	ДИАЛОГИ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.DialogContainer">
		<Setter Property="Background" Value="{DynamicResource SecondaryBG}"/>
		<Setter Property="CornerRadius" Value="16"/>
		<Setter Property="Padding" Value="24"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
		<Setter Property="BoxShadow" Value="0 8 32 #50000000"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	АЛЕРТЫ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.AlertError, Border.MessageError">
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Padding" Value="14,12"/>
		<Setter Property="Background" Value="{DynamicResource DangerBgBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource DangerBorderBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<Style Selector="Border.AlertSuccess, Border.MessageSuccess">
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Padding" Value="14,12"/>
		<Setter Property="Background" Value="{DynamicResource SuccessBgBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource SuccessBorderBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<!-- ══════════════════════════════════════════════════════════════
	СООБЩЕНИЯ
	══════════════════════════════════════════════════════════════ -->

	<Style Selector="Border.MessageBubble">
		<Setter Property="Padding" Value="12,8"/>
		<Setter Property="MinWidth" Value="48"/>
		<Setter Property="MaxWidth" Value="520"/>
		<Setter Property="BoxShadow" Value="0 1 3 0 #0A000000"/>
	</Style>

	<!-- ─── OWN: Одиночное ─── -->
	<Style Selector="Border.MessageBubble.Own.Alone">
		<Setter Property="Background" Value="{DynamicResource MessageOwnBackground}"/>
		<Setter Property="CornerRadius" Value="18"/>
	</Style>

	<!-- ─── OWN: Первое в группе (снизу-справа маленький) ─── -->
	<Style Selector="Border.MessageBubble.Own.First">
		<Setter Property="Background" Value="{DynamicResource MessageOwnBackground}"/>
		<Setter Property="CornerRadius" Value="18,18,4,18"/>
	</Style>

	<!-- ─── OWN: Среднее (справа оба маленькие) ─── -->
	<Style Selector="Border.MessageBubble.Own.Middle">
		<Setter Property="Background" Value="{DynamicResource MessageOwnBackground}"/>
		<Setter Property="CornerRadius" Value="18,4,4,18"/>
	</Style>

	<!-- ─── OWN: Последнее (сверху-справа маленький) ─── -->
	<Style Selector="Border.MessageBubble.Own.Last">
		<Setter Property="Background" Value="{DynamicResource MessageOwnBackground}"/>
		<Setter Property="CornerRadius" Value="18,4,18,18"/>
	</Style>

	<!-- ─── OTHER: Одиночное ─── -->
	<Style Selector="Border.MessageBubble.Other.Alone">
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="CornerRadius" Value="18"/>
	</Style>

	<!-- ─── OTHER: Первое в группе (снизу-слева маленький) ─── -->
	<Style Selector="Border.MessageBubble.Other.First">
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="CornerRadius" Value="18,18,18,4"/>
	</Style>

	<!-- ─── OTHER: Среднее (слева оба маленькие) ─── -->
	<Style Selector="Border.MessageBubble.Other.Middle">
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="CornerRadius" Value="4,18,18,4"/>
	</Style>

	<!-- ─── OTHER: Последнее (сверху-слева маленький) ─── -->
	<Style Selector="Border.MessageBubble.Other.Last">
		<Setter Property="Background" Value="{DynamicResource ThirdBG}"/>
		<Setter Property="CornerRadius" Value="4,18,18,18"/>
	</Style>

	<!-- ─── Highlight & Wrapper ─── -->

	<Style Selector="Border.MessageHighlight">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="CornerRadius" Value="12"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.4"/>
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="Border.MessageHighlight.Highlighted">
